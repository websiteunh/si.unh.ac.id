# CodeIgniter Rewrite Rules
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /si.unh.ac.id/
    
    # Redirect to remove trailing slash
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [R=301,L]
    
    # Send requests to index.php if file/directory doesn't exist
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>

# Protect .env
<IfModule mod_authz_core.c>
    <FilesMatch "^\.env">
        Require all denied
    </FilesMatch>
</IfModule>
<IfModule !mod_authz_core.c>
    <FilesMatch "^\.env">
        Order allow,deny
        Deny from all
    </FilesMatch>
</IfModule>

# Force HTTPS (optional; uncomment if TLS is enforced)
# RewriteEngine On
# RewriteCond %{HTTPS} !=on
# RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# PHP Security Settings (open_basedir restriction)
# Restrict PHP to only access files within project directory
<IfModule mod_php7.c>
    php_value open_basedir "/var/www/html/si.unh.ac.id/:/tmp/:/var/tmp/"
</IfModule>
<IfModule mod_php8.c>
    php_value open_basedir "/var/www/html/si.unh.ac.id/:/tmp/:/var/tmp/"
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    # Basic CSP, adjust if you load external assets (relaxed for compatibility)
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' data:; style-src 'self' 'unsafe-inline' data:; img-src 'self' data: http: https:; font-src 'self' data:; connect-src 'self'; frame-ancestors 'self'; form-action 'self'"
</IfModule>
